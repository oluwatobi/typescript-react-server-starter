  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
  },
  "compileOnSave": false,
  "include": [
    "./src"
