{
  "name": "@typescript-react-server-starter/shared",
  "version": "1.0.0-SNAPSHOT",
  "description": "Commons module for the typescript-react-server-starter front-end application",
  "author": "<Your Name>",
  "license": "ISC",
  "main": "lib/shared.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "jest --no-cache --collectCoverage"
  },
  "dependencies": {
    "typescript": "^3.3.3333"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/jest-when": "^1.1.4",
    "jest": "^24.5.0",
    "jest-cli": "^24.5.0",
    "ts-jest": "^24.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "tsx",
      "ts",
      "js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/(\\..*)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.json"
      }
    },
    "coverageReporters": [
      "json",
      "text",
      "lcov",
      "clover"
    ],
    "coverageThreshold": {
      "global": {
        "branch": 0,
        "lines": 0
      }
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts",
      "<rootDir>/src/**/*.js"
    ]
  },
  "private": true
}
