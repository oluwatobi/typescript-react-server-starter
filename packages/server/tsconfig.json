{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "jsx": "preserve",
    "paths": {
      "@middleware/*": ["src/middleware/*"],
      "@routes/*": ["src/routes/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/__mocks__/*",
    "test/**/*.ts",
    "test/**/*.tsx",
    "test/**/*.js"
  ]
}
